NODE_ENV=development

# Database - SQLite for dev, Postgres for prod
DATABASE_URL="file:./dev.db"
# For production with Supabase:
# DATABASE_URL="postgresql://user:password@host:5432/database?schema=public"

# Redis for BullMQ
REDIS_URL="redis://localhost:6379"

# Supabase (required for RAG)
SUPABASE_URL="https://your-project.supabase.co"
NEXT_PUBLIC_SUPABASE_URL="https://your-project.supabase.co"
NEXT_PUBLIC_SUPABASE_ANON_KEY="your-anon-key-here"
SUPABASE_SERVICE_ROLE_KEY="your-service-role-key-here"  # Server-side only, for ingestion

# OpenAI (required for RAG embeddings)
OPENAI_API_KEY="sk-your-openai-api-key-here"

# RAG Configuration
RAG_EMBEDDING_MODEL="text-embedding-3-large"  # 3072 dimensions
RAG_CHUNK_TOKENS=900          # Target tokens per chunk
RAG_CHUNK_OVERLAP=150         # Token overlap between chunks
RAG_TOP_K=12                  # Number of chunks to retrieve
RAG_DEFAULT_ORG_ID="00000000-0000-0000-0000-000000000001"  # Default org for dev
